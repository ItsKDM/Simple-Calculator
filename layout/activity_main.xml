<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="7"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tvControl"
        android:layout_toRightOf="@id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn8"
        android:layout_below="@id/tvControl" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn9"
        android:layout_below="@id/tvControl"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/btn7" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/btn8"
        android:layout_toRightOf="@id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/btn9"
        android:layout_toRightOf="@id/btn5"/>

    <Button
        android:id="@+id/btnmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn6"
        android:layout_below="@id/btndivide"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/btn4"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn1"
        android:layout_below="@id/btn5"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn2"
        android:layout_below="@id/btn6" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn3"
        android:layout_below="@id/btnmul"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/btn1"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btnClear"
        android:layout_below="@id/btn2"/>

    <Button
        android:id="@+id/btnequal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn0"
        android:layout_below="@id/btn3"/>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btnequal"
        android:layout_below="@id/btnsub"/>

    <TextView
        android:id="@+id/tvControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_above="@id/btn7"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_above="@id/tvControl"
        android:layout_marginBottom="16dp"
        />

</RelativeLayout>